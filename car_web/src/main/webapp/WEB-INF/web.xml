	xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee http://xmlns.jcp.org/xml/ns/javaee/web-app_3_1.xsd"
	version="3.1">

	<display-name>web-app</display-name>
	
	<servlet>
		<servlet-name>dispatcher</servlet-name>
		<servlet-class>framework.webcore.DispatcherServlet</servlet-class> 
	</servlet>
	
	<servlet-mapping>
		<servlet-name>dispatcher</servlet-name>
		<url-pattern>/</url-pattern>
	</servlet-mapping>
	
	<listener>
		<listener-class>framework.webcore.listener.FrameworkServletContextListener</listener-class>
	</listener>
	
